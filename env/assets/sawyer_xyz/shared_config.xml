    <material shininess=".1" name="light_wood_v3" texture="light_wood_v3" specular="0.4"/>

    <texture builtin="gradient" height="256" rgb1=".9 .9 1." rgb2=".2 .3 .4" type="skybox" width="256"/>
  </asset>

    <visual>
